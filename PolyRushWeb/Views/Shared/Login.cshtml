@model LoginModel
@{
  ViewData["Title"] = "Login";
  Layout = "_Layout";
}


      <!-- Outer Row -->
            <div class="row justify-content-center" style="max-width: 1000px; margin: auto; ">
                <h1 class="text-center" style="margin: auto">Register</h1>
                <div class="col-xl-10 col-lg-12 col-md-9">
    
                    <div class="card o-hidden border-0 shadow-lg my-5" style="background: #17082e">
                        <div class="card-body p-0">
                            <!-- Nested Row within Card Body -->
                            <div class="row" >
                                <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                                <div class="col-lg-6">
                                    <div class="p-5">
                                        <div class="text-center">
                                            <h1 class="h4 text-gray-900 mb-4">Welcome Back!</h1>
                                        </div>
                                        <form class="user" asp-controller="Login" asp-action="Login">
                                            <div class="form-group">
                                                <input type="text" class="form-control my-2 form-control-user"
                                                    asp-for="Username" 
                                                    placeholder="Username">
                                            </div>
                                            <div class="form-group">
                                                <input type="password" class="form-control my-2 form-control-user"
                                                     asp-for="Password" placeholder="Password">
                                            </div>
                                            
                                          
                                            <button type="submit"  class="btn btn-primary btn-user btn-block">
                                                Login
                                            </button>
                                            
                                            
                                        </form>
                                        <hr>
                                        <div class="text-center">
                                            <a class="small" href="forgot-password.html">Forgot Password?</a>
                                        </div>
                                        <div class="text-center">
                                            <a class="small" asp-action="Register" asp-controller="Login">Create an Account!</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
    
                </div>
            </div>