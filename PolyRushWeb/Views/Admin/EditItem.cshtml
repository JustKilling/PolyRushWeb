@using Microsoft.AspNetCore.Mvc.TagHelpers
@model PolyRushWeb.Models.ItemModel

@{
    ViewData["Title"] = "Edit item";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<script >
    @{
        int index = 7;
    }
    $(document).ready(function() {
        $("#navs").children().eq(@index).addClass("active")
    });
</script>


<h3>Edit item @Model.Name</h3>
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditItemAction" asp-controller="Admin">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Iditem" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Items">Back to List</a>
</div>

